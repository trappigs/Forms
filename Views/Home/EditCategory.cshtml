@model List<Category>

@{
    ViewData["Title"] = "Edit Category";
}

<form action="" method="post">
    <div class="mb-3">
        <label class="form-label">Mevcut Kategoriler</label>

        <select for="iD" name="id" asp-items="ViewBag.Categories" class="form-select">
        </select>

        <br />


        <label class="form-label">Kategorinin Yeni Adı</label>
        <input for="CategoryName" name="CategoryName" type="text" class="form-control"/>

    </div>
    <button class="btn btn-primary" type="submit">Kaydet</button>
</form>